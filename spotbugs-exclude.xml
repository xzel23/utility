<FindBugsFilter>
    
    <!-- DataSource.getLogWriter() is mandated by the API. -->
    <Match>
        <Class name="com.dua3.utility.db.JdbcDataSource" />
        <Method name="getLogWriter" />
        <Bug pattern="EI_EXPOSE_REP" />
    </Match>
    
    <!-- DataSource.setLogWriter() is mandated by the API. -->
    <Match>
        <Class name="com.dua3.utility.db.JdbcDataSource" />
        <Method name="setLogWriter" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    
    <!-- Deprecate before removal to see if it's used somewhere. -->
    <Match>
        <Class name="com.dua3.utility.db.NamedParameterStatement" />
        <Method name="getStatement" />
        <Bug pattern="EI_EXPOSE_REP" />
    </Match>
    
    <!-- False positive. -->
    <Match>
        <Class name="com.dua3.utility.io.IOUtil" />
        <Method name="deleteRecursive" />
        <Bug pattern="RCN_REDUNDANT_NULLCHECK_WOULD_HAVE_BEEN_A_NPE" />
    </Match>
    
    <!-- Let me use that Random in test code. -->
    <Match>
        <Class name="com.dua3.utility.swing.TestSwingComponents" />
        <Method name="generateThrowable" />
        <Bug pattern="DMI_RANDOM_USED_ONLY_ONCE" />
    </Match>
    
</FindBugsFilter>
